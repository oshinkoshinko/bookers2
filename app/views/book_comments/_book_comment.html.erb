        <% book.book_comments.each do |book_comment| %>
        <tr class="comment-index">
           <td>
           <%= attachment_image_tag book_comment.user, :profile_image, :fill, 50, 50, fallback: "no_image.jpg", size:'50x50' %><br>
           <%= book_comment.user.name %>
           </td>
           <td><%= book_comment.comment %></td>
           <td>
           <% if book_comment.user == current_user %>
           <%= link_to "Destroy", book_book_comment_path(book_comment.book_id, book_comment.id), method: :delete, remote: true, class: "btn btn-danger btn-sm" %>
           <% end %>
           </td>
        </tr>
        <% end %>