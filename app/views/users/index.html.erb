<h1>users#index</h1>
<div class="container">
  <div class="row">
    <div class="col-lg-4">
      <%= render 'users/list', user: @user %>
      <%= render 'books/list', book: @book %>
    </div>
    <div class="col-lg-8">
      <h2>Users</h2>
      <table class="table">
        <tr>
          <td>image</td>
          <td>name</td>
          <td></td>
        </tr>
        <% @users.each do |user| %>
        <tr>
          <td><%= attachment_image_tag user, :profile_image, :fill, 30, 30, fallback: "no_image.jpg" %></th>
          <td><%= user.name %></th>
          <td><%= link_to "Show", user_path(user.id) %></th>
        </tr>
        <% end %>
      </table>
    </div>
  </div>
</div>