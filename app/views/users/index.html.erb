<div class="container">
  <div class="row">
    <div class="col-md-3">
      <%= render 'users/list', user: @user %>
      <%= render 'books/list', book: @book %>
    </div>
    <div class="col-md-8 offset-md-1">
      <h2>Users</h2>
      <table class="table">
        <tr class="font-weight-bold">
          <td>image</td>
          <td>name</td>
          <td></td>
        </tr>
        <% @users.each do |user| %>
        <tr>
          <td><%= attachment_image_tag user, :profile_image, :fill, 50, 50, fallback: "no_image.jpg", size:'50x50' %></th>
          <td><%= user.name %></th>
          <td><%= link_to "Show", user_path(user.id) %></th>
        </tr>
        <% end %>
      </table>
    </div>
  </div>
</div>