<h1>Users#show</h1>
<div class="container">
  <div class="row">
    <div class="col-lg-4">
      <%= render 'users/list', user: @user %>
      <%= render 'books/list', book: @book %>
    </div>
    <div class="col-lg-8">
      <h1>Books</h1>
        <table class="table">
          <tr>
            <td></td>
            <td>Title</td>
            <td>Opinion</td>
          </tr>
          <% @books.each do |book| %>
          <tr>
            <td><%= attachment_image_tag @user, :profile_image, :fill, 10, 10, fallback: "no_image.jpg" %></th>
            <td><%= link_to book.title, book_path(book.id) %></th>
            <td><%= book.opinion %></th>
          </tr>
          <% end %>
          <%= paginate @books %>
        </table>
    </div>
  </div>
</div>