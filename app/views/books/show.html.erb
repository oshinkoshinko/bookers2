<h1>books#show</h1
<div class="container">
  <div class="row">
    <div class="col-lg-4">
      <%= render 'users/list', user: @user %>
      <%= render 'books/list', book: @new_book %>
    </div>
    <div class="col-lg-8">
      <div class="book-detail">
        <h2>Book detail</h2>
        <table class="table">
          <tr>
            <td><%= attachment_image_tag @user, :profile_image, :fill, 30, 30, fallback: "no_image.jpg" %></td>
            <td><%= link_to @book.title, user_path(@user.id) %></td>
            <td><%= @book.opinion %></td>
            <% if @book.user == current_user %>
            <td><%= link_to "Edit", edit_book_path(@book.id), class: "btn btn-success" %></td>
            <td><%= link_to "Destroy", book_path(@book.id), method: :delete, class: "btn btn-danger" %></td>
            <% end %>
           </tr>
        </table>
        <p>
         <td><%= link_to @book.user.name, user_path(@user.id) %></td>
           </p>
        </div>
    </div>
  </div>
</div>