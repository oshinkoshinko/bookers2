<div class="container">
  <div class="row">
    <div class="col-md-3">
      <%= render 'users/list', user: @user %>
      <%= render 'books/list', book: @new_book %>
    </div>
    <div class="col-md-8 offset-md-1">
      <div class="book-detail">
        <h2>Book detail</h2>
        <table class="table table-sm">
          <tr>
            <td>
              <%= link_to user_path(@book.user.id) do %>
              <%= attachment_image_tag @user, :profile_image, :fill, 50, 50, fallback: "no_image.jpg", size:'50x50' %></td>
              <% end %>
            <td><%= link_to @book.title, book_path(@book.id) %></td>
            <td><%= @book.body %></td>
            <td id="favorites_btn_<%= @book.id %>">
              <%= render 'favorites/favorite', book: @book %>
            </td>
            <td>コメント数：<%= @book.book_comments.count %></td>
            <% if @book.user == current_user %>
            <td><%= link_to "Edit", edit_book_path(@book.id), class: "btn btn-success btn-sm" %></td>
            <td><%= link_to "Destroy", book_path(@book.id), method: :delete, data: {confirm: "本当に消しますか？"}, class: "btn btn-danger btn-sm" %></td>
            <% end %>
           </tr>
            <td style="border:none;"><%= link_to @book.user.name, user_path(@user.id) %></td>
        </table>

        <table>
        <% @book.book_comments.each do |book_comment| %>
        <tr class="comment-index">
           <td>
           <%= attachment_image_tag book_comment.user, :profile_image, :fill, 50, 50, fallback: "no_image.jpg", size:'50x50' %><br>
           <%= book_comment.user.name %>
           </td>
           <td><%= book_comment.comment %></td>
           <td>
           <% if book_comment.user == current_user %>
           <%= link_to "Destroy", book_book_comment_path(book_comment.book_id, book_comment.id), method: :delete, class: "btn btn-danger btn-sm" %>
           <% end %>
           </td>
        </tr>
        <% end %>
        </table>

        <div class="comment-box">
          <%= form_with(model:[@book, @book_comment], local: true) do |f| %>
          <%= f.text_area :comment %>
          <%= f.submit "送信" %>
          <% end %>
        </div>

        </div>
    </div>
  </div>
</div>