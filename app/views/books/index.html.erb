<div class="container">
  <div class="text-danger">
  <% if @book.errors.any? %>
    <h3 class="text-weight-bold"><%= pluralize(@book.errors.count, "error") %> prohibited this obj from being saved:</h3>
    <% @book.errors.full_messages.each do |message| %>
    ・<%= message %><br>
    <% end %>
  <% end %>
  </div>
  <div class="row">
    <div class="col-md-3">
      <%= render 'users/list', user: @user %>
      <%= render 'books/list', book: @book %>
    </div>
    <div class="col-md-8 offset-md-1">
      <h2>Books</h2>
        <table class="table table-hover">
          <tr class="font-weight-bold">
            <td></td>
            <td>Title</td>
            <td>Opinion</td>
            <td></td>
            <td></td>
          </tr>
          <% @books.each do |book| %>
          <tr>
            <td>
              <%= link_to user_path(book.user.id) do %>
              <%= attachment_image_tag @user, :profile_image, :fill, 50, 50, fallback: "no_image.jpg", size:'50x50' %></td>
              <% end %>
            <td><%= link_to book.title, book_path(book.id) %></td>
            <td><%= book.body %></td>
            <% if book.favorited_by?(current_user) %>
              <td>
                <%= link_to book_favorites_path(book.id), method: :delete do %>
                <i class="fas fa-heart" style="color:red;"><%= book.favorites.count %></i>
                <% end %>
              </td>
            <% else %>
              <td>
                <%= link_to book_favorites_path(book.id), method: :post do %>
                <i class="fas fa-heart"><%= book.favorites.count %></i>
                <% end %>
              </td>
            <% end %>
            <td>コメント数：<%= book.book_comments.count %></td>
          </tr>
          <% end %>
        </table>
          <%= paginate @books %>
    </div>
  </div>
</div>